{
    "manifest_version": 2,
    "name": "My Test Extension",
    "description": "This extension opens a popup when clicked.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab"
    ]
}